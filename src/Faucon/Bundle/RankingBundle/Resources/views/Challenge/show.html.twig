<h1>Challenge</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Challengerrank</th>
            <td>{{ entity.challengerrank }}</td>
        </tr>
        <tr>
            <th>Challengedrank</th>
            <td>{{ entity.challengedrank }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('challenge') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('challenge_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('challenge_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
