{% extends '::base.html.twig' %}

{% block errorstylesheets %}
<link href="{{ asset('bundles/framework/css/exception_layout.css') }}" rel="stylesheet" type="text/css" media="all" />
<link href="{{ asset('bundles/framework/css/exception.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}

{% block title %}Der er sket en fejl: {{ status_text }}{% endblock %}
{% block navigation %}
    {% include '::navigation.base.html.twig' %}
{% endblock %}

{% block container %}
    <div class="container">
        <div class="row">
            <div class="span12">
                {% block body %}
                <div class="header clear_fix">
                    <div class="header_logo">
                        <img src="{{ asset('bundles/framework/images/logo_symfony.gif') }}" alt="Symfony" />
                    </div>

                    <div class="search">
                    <form method="get" action="http://symfony.com/search">
                        <div class="form_row">

                        <label for="search_id">
                            <img src="{{ asset('bundles/framework/images/grey_magnifier.png') }}" alt="Search on Symfony website" />
                        </label>

                        <input name="q" id="search_id" type="search" placeholder="Search on Symfony website" />

                        <button type="submit">
                            <span class="border_l">
                            <span class="border_r">
                                <span class="btn_bg">OK</span>
                            </span>
                            </span>
                        </button>
                        </div>
                    </form>
                    </div>
                </div>
                {% endblock %}
            </div>
        </div>
        {% block teasers %}{% endblock %}
    </div> <!-- /container -->
{% endblock %}
